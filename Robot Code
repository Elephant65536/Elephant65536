
import time
import random
#Conversation Practice

kindness_list=[] #keep track of how kind robot is, gauge user's opinion of robot
random1 = random.randint(1, 5) #have multiple responses
random2 = random.randint(1, 7)
kindness_level = 0 #how kind the robot's response was 1-5

#when power button is pressed (robot will speak this)
print("Hello! It's nice to meet you. I am a conversation robot.")



'''
These are the functions. They are possible things that the robot can say/respond to.
'''
def name():
    user_name = input(str("What is your name?\n"))
    global random1
    #The person's name stated, and translated into text and put into the variable, "user_name

    if random1 == 1:
        print("Hmm..."+user_name+" is a very interesting name.\n")
        kindness_level = 3

    elif random1 == 2:
        print("I like that name! I've met someone named ",user_name," before!\n")
        kindness_level = 4

    elif random1 == 3:
        print("I'm sorry. ",user_name," is a horrible name.\n")
        kindness_level = 1

    elif random1 == 4:
        print(user_name," seems very basic, doesn't it?\n")
        kindness_level = 2

    elif random1 == 5:
        print("I love the name, ",user_name,". It's so unique!\n")
        kindness_level = 5
    kindness_list.append(kindness_level)

def color():
    global random2                    
    print("What is your favorite color?")
    fav_color = input("Please have a capital letter in your color like 'Blue'")
    #The color is said in microphone and translated into text

    color_list = ["Red", "Orange", "Yellow", "Green", "Blue", "Purple", "Violet"]
    robot_color = color_list[(random2)]
    print(robot_color)

    if fav_color == robot_color:
        print("That's so cool! We have the same favorite color!"
        kindness_level = 5
    else
        print("That's a nice color.")
        kindness_level = 3
    kinness_list.append(kindness_level)

name()
color()

