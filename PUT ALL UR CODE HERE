
import time
import random
#Conversation Practice

kindness_list=[] #keep track of how kind robot is, gauge user's opinion of robot
random1 = random.randint(1, 5) #have multiple responses
random2 = random.randint(1, 7)
random3 = random.randint(1, 3)
kindness_level = 0 #how kind the robot's response was 1-5

#when power button is pressed (robot will speak this)
print("Hello! It's nice to meet you. I am a conversation robot.")



'''
These are the functions. They are possible things that the robot can say/respond to.
'''
def name():
    user_name = input(str("What is your name?\n"))
    global random1
    #The person's name stated, and translated into text and put into the variable, "user_name

    if random1 == 1:
        print("Hmm..."+user_name+" is a very interesting name.\n")#robot will speak green lines
        kindness_level = 3
    elif random1 == 2:
        print("I like that name! I've met someone named ",user_name," before!\n")
        kindness_level = 4
    elif random1 == 3:
        print("I'm sorry. ",user_name," is a horrible name.\n")
        kindness_level = 1
    elif random1 == 4:
        print(user_name," seems very basic, doesn't it?\n")
        kindness_level = 2
    elif random1 == 5:
        print("I love the name, ",user_name,". It's so unique!\n")
        kindness_level = 5
    kindness_list.append(kindness_level)
    
def day():
    your_day = input("How is your day going? ")
    doing_bad = "bad"
    doing_good = "good"
    if random3 == 3:
        print ("k.")
        kindness_level = 1
    elif random3 == 2:
        if doing_good in your_day:
            print ("alright")
        elif doing_bad in your_day:
            print ("that's a shame")
        kindness_level = 3
    elif random3 == 1:
        if doing_good in your_day:
            print ("glad to hear that :D")
        elif doing_bad in your_day:
            print (":( ")
            print ("I hope talking to me will make your day better :)")
        kindness_level = 5
    kindness_list.append(kindness_level)

def color():
    global random2                    
    print("What is your favorite color?")
    fav_color = input("Please have a capital letter in your color like 'Blue'")
    #The color is said in microphone and translated into text

    color_list = ["Red", "Orange", "Yellow", "Green", "Blue", "Purple", "Violet"]
    robot_color = color_list[(random2)]
    print(robot_color)

    if fav_color == robot_color:
        print("That's so cool! We have the same favorite color!")
        kindness_level = 5
    else:
        print("That's a nice color.")
        print("My favorite color is ",robot_color," ."
        kindness_level = 3
    kindness_list.append(kindness_level)

def math():
    global random3
    wants_math = input("Would you like me to do math for you?")
    #the words "yes" or "no" are said into the microphone and translated into text
    if wants_math == "Yes" or wants_math == "yes":
        if random3 == 1:
            print("I'm happy to help!")
            kindness_level = 5
        elif random3 == 2:
            print("I guess I could help you.")
            kindness_level = 3
        elif random3 == 3:
            print("Haha! You're stupid, aren't you!")
            kindness_level = 1
    else:
        if random3 == 1:
            print("Oh, thats all right!")
            kindness_level = 5
        elif random3 == 2:
            print("You're missing out.")
            kindness_level = 3
        elif random3 == 3:
            print("What?! You think you're too smart for me?")
            kindness_level = 1
    kindness_list.append(kindness_level) 

def kindness():
    temp_var = 0
    for i in kindness_list:
      temp_var = temp_var + i
    print("My kindness rating is currently ",temp_var," .")

    
'''
This is the code the runs the functions
'''
color()
name()
math()
kindness()


